@using Microsoft.AspNetCore.Mvc.TagHelpers
@model GRSMU.TimeTableBot.Web.Core.ViewModels.Notifications.NotificationViewModel;

<h1>Рассылка сообщений</h1>
<form asp-action="SendNotification" method="post">
    <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" id="text" asp-for="Text" style="height: 100px"></textarea>
        <label for="text">Сообщение</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" asp-for="Filter.IsBroadcast" checked>
        <label class="form-check-label" asp-forfor="Filter.IsBroadcast">
            Checked checkbox
        </label>
    </div>
    <button type="submit">Отправить</button>
</form>
