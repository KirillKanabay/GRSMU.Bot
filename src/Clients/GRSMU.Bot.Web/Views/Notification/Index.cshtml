@using Microsoft.AspNetCore.Mvc.TagHelpers
@using GRSMU.Bot.Domain.Notifications.Enums
@model GRSMU.Bot.Web.Core.ViewModels.Notifications.NotificationViewModel;

<h1>Рассылка сообщений</h1>
<form asp-action="SendNotification" method="post">
    <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" id="text" asp-for="Text" style="height: 100px"></textarea>
        <label for="text">Сообщение</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="Filter.Type" value="@NotificationType.Broadcast">
        <label class="form-check-label" asp-for="Filter.Type">
            Всем
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="Filter.Type" value="@NotificationType.OnlyRegistered">
        <label class="form-check-label" asp-for="Filter.Type">
            Только зарегистрированным
        </label>
    </div>
    <button class="btn btn-primary" type="submit">Отправить рассылку</button>
</form>
